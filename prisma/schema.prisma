generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model shopify_sessions {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  accessToken String
  id_         String  @map("id")
  isOnline    Boolean
  scope       String
  shop        String
  state       String
}

model vectors {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  title_english String
  value_english String
  title_urdu    String
  value_urdu    String
  img_cdn       String
  type          VectorType      @default(CustomOrder)
  value_type    VectorValueType @default(Constant)
}

model manufacturing_status {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  color      String?
  color_code String?
}

model factories {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  location String
  // orders   shopify_orders[]
}

model shopify_orders {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  shopify_order_id String   @unique
  order_name       String
  factory          String?
  line_items       Json[]
  shop             String
  created_at       DateTime
}

model shop_shirt {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  product_id  String    @unique
  vectors_ids String[]
  created_at  DateTime? @default(now())
  shop        String
}

model notes {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  order_id     String
  line_item_id String
  created_at   DateTime? @default(now())
  note         String?
  user_name    String?
  shop         String
}

model orders {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  order_id     Int
  order_number Int
  line_items   Json[]
}

model order_tag_logs {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  order_id     Int
  order_number Int
  message      String
  created_at   DateTime? @default(now())
}

model users {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  password      String
  session_token String?
  username      String
  is_loggedin   Boolean  @default(false)
  is_admin      Boolean  @default(false)
  access        String[]
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model meters_per_size {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  size_title   String   @unique
  cloth_meters String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

model inventory {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  sku        String   @unique
  inventory  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model inventory_transactions {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  sku       String
  type      TransactionType
  inventory String
  current_inventory String?
  order_name String
  createdAt DateTime        @default(now())
}

enum TransactionType {
  ADD
  REMOVE
}

enum VectorType {
  CustomOrder
  ShopShirt
}

enum VectorValueType {
  Constant
  Dynamic
}
